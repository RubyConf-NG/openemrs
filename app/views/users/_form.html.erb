<div class="text-field">
  <%= form.label :name, class: "block text-gray-700 text-sm font-bold mb-2" %>
  <%= form.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
</div>


<div class="text-field">
  <%= form.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
  <%= form.text_field :email, type: 'email', class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
</div>

<div class="text-field">
  <%= form.label :date_of_birth, class: "block text-gray-700 text-sm font-bold mb-2" %>
  <%= form.date_field :date_of_birth, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
</div>

<div class="password-field">
  <%= form.label :password, class: "block text-gray-700 text-sm font-bold mb-2" %>
  <%= form.password_field :password, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
</div>
