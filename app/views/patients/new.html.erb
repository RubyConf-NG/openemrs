<h1>Create new patient</h1>

<div class="w-full max-w-lg mx-auto">
  <%= form_with(model: @patient, html: { class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" }) do |form| %>
    <%= render 'form', form: form %>

    <%= form.submit "Register Patient", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline mr-5 cursor-pointer" %>
  <% end %>
</div>
